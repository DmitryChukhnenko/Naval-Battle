<Window x:Class="Client.Arrangement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Arrangement" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Right">
            <Button DockPanel.Dock="Bottom" Click="Button_Click_1" Content="Send" Padding="15"/>
            <Button DockPanel.Dock="Bottom" Click="Button_Click_2" Content="Confirm" Padding="15"/>
            <TextBlock Opacity="100"/>
        </DockPanel>

        <ItemsControl ItemsSource="{Binding Cells}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="20" Height="20">
                        <Button Click="Button_Click"/>
                        <Image x:Name="image"/>
                    </Grid>

                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsShipHere}" Value="False">
                            <Setter Property="Image.Source" Value="water.png" TargetName="image"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsShipHere}" Value="True">
                            <Setter Property="Image.Source" Value="ship.png" TargetName="image"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsDamagedShipHere}" Value="True">
                            <Setter Property="Image.Source" Value="damagedship.png" TargetName="image"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsShipBowHere}" Value="True">
                            <Setter Property="Image.Source" Value="shipbow.png" TargetName="image"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="{Binding }" Rows="{Binding }"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </DockPanel>
</Window>
